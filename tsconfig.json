{
  "compilerOptions": {
    "target": "es5",
    "module": "es6",
    "moduleResolution": "node",
    "outDir": "./dist",
//    "rootDir": "./src",
    "sourceRoot": "/",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "jsx": "react",
    "declaration": true,
    "declarationMap": true
  },
  "include": [
    "src/**/*",
    "stories/**/*",
    "tailwind.config.ts",
    "webpack.config.js",
    ""
  ],
  "exclude": [".husky/**/*",".storybook/*","dist/**/*","node_modules/**/*"]
}
