{
  "compilerOptions": {
    "target": "es5",
    "module": "es6",
    "moduleResolution": "node",
    "outDir": "./dist",
    //    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "jsx": "react",
    "declaration": true,
    "declarationMap": true,
  },
  "include": ["**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules","dist"],
}
